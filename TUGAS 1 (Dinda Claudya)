

#include <iostream>

int main() {
    int A = 3; // bilangan ganjil
    int B = 8; // bilangan genap

    if (A % 2 == 1) {
        std::cout << "Benar, bilangan A adalah bilangan ganjil." << std::endl;
    }

    if (B % 2 == 1) {
        std::cout << "Benar, bilangan B adalah bilangan ganjil." << std::endl;
    }

    if (A % 2 == 1 && B % 2 == 0) {
        std::cout << "Kedua bilangan adalah ganjil dan genap." << std::endl;
        std::cout << "Bilangan A: " << A << ", Bilangan B: " << B << std::endl;
    }

    return 0;
}
